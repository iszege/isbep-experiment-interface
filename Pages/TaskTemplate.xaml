<Page x:Class="ExperimentInterface.Pages.TaskTemplate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExperimentInterface.Pages"
      xmlns:cc="clr-namespace:ExperimentInterface.CustomControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TaskTemplate">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4.2*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="TaskBorder" Grid.Row="0" Grid.Column="1"
                CornerRadius="10" Margin="10,10,10,10"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

            <Border.Effect>
                <DropShadowEffect Color="Gray" Opacity="0.2"
                                    Direction="270"/>
            </Border.Effect>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="LightGray" Offset="1.5"/>
                </LinearGradientBrush>
            </Border.Background>

            <!--<Label x:Name="TitleLabel" Content="Interaction Task" 
                   HorizontalContentAlignment="Center" 
                   VerticalContentAlignment="Center" 
                   FontSize="32" FontWeight="DemiBold"/>-->

            <Grid x:Name="TaskGrid" Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="0.2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                
                
                <Line x:Name="SeparatorLine"
                      Grid.Row="1" Grid.ColumnSpan="2"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Margin="15,0,15,0"
                      X1="0" X2="1"
                      Stretch="Fill"
                      Stroke="Black"
                      StrokeThickness="2"
                      StrokeDashArray="6 3"/>

                <Grid x:Name="DefaultControls"
                      Visibility="Visible"
                      ButtonBase.Click="OnNextTaskButtonClick"
                      Grid.Row="2" Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <cc:TaskButton x:Name="NextButton"
                                   Grid.Column="1"
                                   Margin="10,0,10,0"
                                   HorizontalAlignment="Stretch"
                                   Background="LightGray"
                                   Foreground="Black"
                                   CornerRadius="10"
                                   BorderBrush="Black"
                                   BorderThickness="2"
                                   ImageSource="/Images/UI/PlaceholderImageSource.png" 
                                   Text="Next Item" 
                                   FontFamily="Roboto"
                                   FontSize="16" FontWeight="DemiBold"/>

                </Grid>
                
                <Grid x:Name="FeedbackControlButtons"
                      Visibility="Collapsed"
                      ButtonBase.Click="OnFeedbackSubmitted"
                      Grid.Row="2" Grid.Column="0"
                      Grid.ColumnSpan="2"
                      Margin="0,0,0,5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <cc:TaskButton x:Name="RobotButton" 
                                   Grid.Column="1"
                                   Margin="15,0,15,0"
                                   Background="LightGray"
                                   Foreground="Black"
                                   CornerRadius="10"
                                   BorderBrush="Black"
                                   BorderThickness="2"
                                   ImageSource="/Images/UI/PlaceholderImageSource.png" 
                                   Text="To the Robot" 
                                   FontFamily="Roboto"
                                   FontSize="16" FontWeight="DemiBold"
                                   />

                    <StackPanel Grid.Column="2" 
                                Margin="5" 
                                VerticalAlignment="Center">
                        
                        <TextBlock FontFamily="Roboto" 
                                   FontSize="18"
                                   FontWeight="DemiBold"
                                   HorizontalAlignment="Center">
                            Feedback Wanted
                        </TextBlock>
                        
                        <TextBlock FontFamily="Roboto" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap"
                                   Margin="0,5,0,0">
                            Where should this item be sent to in the future?
                        </TextBlock>

                        <TextBlock Text="&#x27F7;"
                                   FontFamily="Roboto"
                                   FontSize="20"
                                   HorizontalAlignment="Center"/>

                    </StackPanel>

                    <cc:TaskButton x:Name="HumanButton" 
                                Grid.Column="3"
                                Margin="15,0,15,0"
                                Background="LightGray"
                                Foreground="Black"
                                CornerRadius="10"
                                BorderBrush="Black"
                                BorderThickness="2"
                                ImageSource="/Images/UI/PlaceholderImageSource.png" 
                                Text="To a human" 
                                FontFamily="Roboto"
                                FontSize="16" FontWeight="DemiBold"
                                />

                </Grid>

            </Grid>
            
        </Border>


        <Border x:Name="ToolbarBorder"
                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                Background="Black" Margin="0,0,0,0" />

    </Grid>
</Page>
