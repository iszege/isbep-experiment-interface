<Window x:Class="ExperimentInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExperimentInterface"
        xmlns:cc="clr-namespace:ExperimentInterface.CustomControls"
        mc:Ignorable="d"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResize"
        SizeChanged="OnSizeChanged"
        Background="Transparent"
        AllowsTransparency="True">

    <Border Background="LightGray"
            CornerRadius="5">

        <Border.Clip>
            <RectangleGeometry x:Name="WindowClip" 
                               RadiusX="10"
                               RadiusY="10"
                               Rect="0,0,0,0"/>
        </Border.Clip>
        
        <Grid>
            <Frame Source="/Pages/Landing.xaml"
                   NavigationUIVisibility="Hidden"/>
        </Grid>
        
    </Border>
    
</Window>
